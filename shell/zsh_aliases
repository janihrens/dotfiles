alias zshconfig="emacsclient -n ~/.zshrc"
alias ohmyzsh="emacsclient -n ~/.oh-my-zsh"



### default launch application by suffix
# emacs for text
alias -s tex="emacsclient -n"
alias -s sh="emacsclient -n"
alias -s cpp="emacsclient -n"
alias -s h="emacsclient -n"
alias -s hh="emacsclient -n"
alias -s py="emacsclient -n"
alias -s txt="emacsclient -n"

# video
alias -s mkv=mpv
alias -s webm=mpv
alias -s mp4=mpv
alias -s avi=mpv

# misc
alias -s pdf=evince
alias -s html=firefox

# global aliases
alias -g L="|less"
alias -g pipe="|"  # this is needed because of keyboard layout
alias -g redirect=">"  # this is needed because of keyboard layout
